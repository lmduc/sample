angular.module('resources.books', [])
  .factory('Book', ['$http', function($http) {
    var baseUrl = '/books';

    return {
      getAll: function() {
        return $http.get(baseUrl + '.json');
      },
      get: function(id) {
        return $http.get(baseUrl + '/' + id + '.json');
      }
    };
  }]);
